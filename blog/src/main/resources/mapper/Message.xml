<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 设置为UserDao接口方法提供sql语句配置 -->
<mapper namespace="com.example.blog.mapper.MessageMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.example.blog.entity.Message">
        <id column="id" property="id" />
        <result column="uid" property="uid" />
        <result column="message" property="message" />
        <result column="reply" property="reply" />
        <result column="date" property="date" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, uid, message, reply, date
    </sql>

    <select id="getList" resultMap="BaseResultMap">
        SELECT * FROM Message
        <where>
            <if test="uid!=null and uid!=''">uid =#{uid} and </if>
            <if test="message!=null and message!=''">message =#{message} and </if>
            1=1
        </where>
        order by id desc
    </select>

    <update id="update" parameterType="com.example.blog.entity.Message">
        UPDATE Message set reply = #{reply} where id=#{id}
    </update>


    <insert id="add" parameterType="com.example.blog.entity.Message">
        INSERT INTO Message(uid, message, reply, date)VALUES(#{uid},#{message},#{reply},#{date})
    </insert>


    <delete id="del" parameterType="com.example.blog.entity.Message">
        DELETE FROM Message WHERE ID=#{id}
    </delete>


</mapper>